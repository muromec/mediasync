<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ua.org.muromec.MediaSync"
      android:versionCode="6"
      android:versionName="0.6.1">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application android:label="@string/app_name">
        <activity android:name="MediaSync"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
              android:resource="@xml/searchable_serv"/>
        </activity>
        <activity android:name="Browse" android:label="@string/browse_server">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
              android:resource="@xml/searchable_media"/>
        </activity>
        <activity android:name="Playlist" android:label="@string/browse_server" />
        <service android:name="DLoadService" />


    </application>
    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="4" />

</manifest> 
